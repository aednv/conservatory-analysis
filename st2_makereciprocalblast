# Find Reference Species

proteinfile=`(head -n 2 genome_database.csv | tail -n 1 | cut -d ',' -f 9)`

echo "Reference: ${proteinfile%.proteins.fasta}"

for f in *${1}.proteins.fasta;
do
   echo "...${f%.proteins.fasta}"
   blastp -query $f -db blastdb/${proteinfile%.proteins.fasta} -out ${f%.proteins.fasta}2REF.txt -evalue 10 -outfmt 6 -num_threads 16
   blastp -query $proteinfile -db blastdb/${f%.proteins.fasta} -out REF2${f%.proteins.fasta}.txt -evalue 10 -outfmt 6 -num_threads 16 
done

