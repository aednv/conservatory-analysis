for f in *${1}.fasta.gz;
do
   if [[ "$f" == *prot* ]] || [[ "$f" == *tran* ]]; then
	continue;
   fi
   echo $f;
   ${CONUNPE}/makePromoter $f `find ${f%.fasta.gz}.proce.genes.gff3 -print` 50000 > ${f%.fasta.gz}.upstream.fasta
   ${CONUNPE}/makeDownstream $f `find ${f%.fasta.gz}.proce.genes.gff3 -print` 5000 > ${f%.fasta.gz}.downstream.fasta
done

